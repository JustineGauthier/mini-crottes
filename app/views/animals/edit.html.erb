<h1>What's new with <%= @animal.name.capitalize %> ?</h1>

<%= simple_form_for(@animal) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :species %>
  <%= f.text_field :species %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.submit %>
<% end %>

<p>I don't want this cuttie anymore: <%= link_to "Adios amigo!",
                  animal_path(@animal),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "nav-link" %></p>

<p>Oops, missclick! <%= link_to 'Go back', animals_path %></p>
