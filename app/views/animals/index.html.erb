<ul>
  <% @animals.each do |animal| %>
    <li><%= animal.name %></li>
  <% end %>
  <%= link_to "Remove",
                  animal_path(animal),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  <%= link_to "Update",
                  animal_path(animal),
                  method: :update %>
</ul>
