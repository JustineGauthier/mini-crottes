<div class="ms-4">
  <div class='row'>
    <div class="col-8 px-2 ">
      <div class='row'>
      <div class="mx-auto" style="width: 800px">
  <%= form_tag animals_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control pb-2",
        placeholder: "Find an animal"
      %>
        <button name="button" type="submit" class="btn btn-flat">
          <%= submit_tag "Search", class: "btn btn-ghost" %>
        </button>
    </div>
  <% end %>
</div>
<br>
<br>
        <% @animals.each do |animal| %>
          <div class="col-4 my-2">
            <div class= "card h-100 rounded-pill">
              <div class= "m-3" >
                <div class="text-decoration-none"><%= link_to animal_path(animal) do %>
                    <img class="card-img-top rounded-circle" src=<%= cl_image_path animal.photo.key, height: 200, width: 200, crop: :fill %> alt="Card image cap">
                    <div class="card-body text-center">
                      <h5 class="card-title"><%= animal.name %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= animal.species %></h6>
                      <p class="card-text"><%= animal.description %></p>
                      <p class="card-text"><%= animal.price %>â‚¬/day</p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class='col-4'>
      <div style="width: 100%; height: 100vh;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
