<%= simple_form_for(@animal) do |f| %>
  <%# <div class="form-inputs"> %>
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :species,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "species" }%>
    <%= f.input :description,
                input_html: { autocomplete: "description" } %>
    <%= f.input :price,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "price" }%>
    <%= f.input :address,
            input_html: { data: { geocoder_target: "address" }, class: "d-none" },
            wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, "Add this mini crotte" %>
  <%# </div> %>
<% end %>
